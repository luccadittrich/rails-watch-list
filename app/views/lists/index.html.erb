<p>List index</p>
<table>
  <% @lists.each do |l| %>
    <tr>
      <%= link_to list_path(l) do %>
        <td>
          <h2><%= l.name.titleize %></h2>
        </td>
      <% end %>
      <td>
        <%= link_to edit_list_path(l), class: "" do %>
          <i class="fas fa-edit fa-2x"></i>
        <% end %>
      </td>
      <td>
        <%= link_to list_path(l), data: { method: :delete, confirm: "are you sure?" }, class: "" do %>
          <%= render 'shared/trash'%>
        <% end %>
      </td>
    </tr>
  <% end %>
</table>
<%= link_to "new list", new_list_path, class:"btn btn-success" %>
<%= link_to "cards", cards_path, class:"btn btn-primary" %>
